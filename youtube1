#if elif, else lec

apples = 8
if apples==7:
	print('apples equals 7')
elif apples==8:
	print('apples equals 8')
else:
	print('apples does not equal 7 or 8')

#while loop

apples=10
while apples > 0:
	print('we have ' +  str(apples) + ' apples') 
	apples = apples-1
print('we have no apples.')


